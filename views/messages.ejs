<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <title>Manage Messages</title>
    <style>
        .current {
            border: 2px solid green;
            background-color: #e9ffe9;
        }
    </style>
</head>
<body class="p-4">
    <div class="container">
        <h1 class="mb-4">Manage Messages</h1>
        <div id="messagesContainer"></div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const fetchMessages = () => {
            fetch('/api/messages')
                .then(res => res.json())
                .then(messages => {
                    const container = document.getElementById('messagesContainer');
                    container.innerHTML = '';
                    messages.forEach((msg, index) => {
                        container.innerHTML += `
                            <div class="card mb-2 ${msg.isCurrentlyDisplayed ? 'current' : ''}">
                                <div class="card-body">
                                    <p>${msg.content}</p>
                                    <p>
                                        Status: ${msg.displayed ? 'Displayed' : 'Not Displayed'}, 
                                        Times Displayed: ${msg.displayCount}
                                    </p>
                                    <button class="btn btn-primary" onclick="displayMessage(${index})">
                                        ${msg.isCurrentlyDisplayed ? 'Re-Display' : 'Display'}
                                    </button>
                                </div>
                            </div>`;
                    });
                });
        };

        const displayMessage = (index) => {
            fetch('/api/messages/display', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ index })
            }).then(fetchMessages);
        };

        socket.on('updateMessages', fetchMessages);
        fetchMessages();
    </script>
</body>
</html>
